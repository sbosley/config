[alias]
    cp = cherry-pick
    ci = commit
    st = status
    co = checkout
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbi = rebase -i
    log = log --decorate
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --all  --graph --decorate --pretty=oneline --abbrev-commit
    br = !sh -c 'git branch --color $* | grep -v " z-"' -
    dt = difftool
    mt = mergetool
    diffn = diff --no-ext-diff
    fixup = commit --amend -C HEAD
    reword = commit --amend -m
    unchanged = update-index --assume-unchanged
    changed = update-index --no-assume-unchanged
    pullr = pull --rebase
    copr = !"f() { git fetch origin refs/pull/$1/head:pr/$1; git checkout pr/$1; }; f"
	aliases = !"f() { git config --list | grep alias | sed -e 's/alias.//' -e 's/=/ = /'; }; f"
[user]
    name = Sam Bosley
    email = sboz88@gmail.com
[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
[core]
    whitespace = -trailing-space
    autocrlf = input
    editor = atom --wait
[push]
    default = matching
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
    prompt = false
[diff]
    tool = Kaleidoscope
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true
[mergetool]
    prompt = false
[merge]
    tool = Kaleidoscope
