# This is the default .slate file. If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true

# Resize Bindings
bind l:cmd;alt       resize +5% +0
bind j:cmd;alt        resize -5% +0
bind i:cmd;alt          resize +0   -5%
bind k:cmd;alt        resize +0   +5%
bind l:ctrl;alt  resize -5% +0 bottom-right
bind j:ctrl;alt   resize +5% +0 bottom-right
bind i:ctrl;alt     resize +0   +5% bottom-right
bind k:ctrl;alt   resize +0   -5% bottom-right

# Push Bindings
bind l:ctrl;cmd  push right bar-resize:screenSizeX/2
bind j:ctrl;cmd  push left  bar-resize:screenSizeX/2
bind i:ctrl;cmd  push up    bar-resize:screenSizeY/2
bind k:ctrl;cmd  push down  bar-resize:screenSizeY/2
bind m:ctrl;cmd  corner bottom-left resize:screenSizeX/2;screenSizeY/2
bind u:ctrl;cmd  corner top-left resize:screenSizeX/2;screenSizeY/2
bind o:ctrl;cmd  corner top-right resize:screenSizeX/2;screenSizeY/2
bind .:ctrl;cmd  corner bottom-right resize:screenSizeX/2;screenSizeY/2

# Nudge Bindings
bind l:shift;alt nudge +5% +0
bind j:shift;alt  nudge -5% +0
bind i:shift;alt    nudge +0   -5%
bind k:shift;alt  nudge +0   +5%

# Throw Bindings
bind 1:cmd;alt         throw 0 resize
bind 2:cmd;alt         throw 1 resize
bind 3:cmd;alt         throw 2 resize
bind l:ctrl;shift  throw right resize
bind j:ctrl;shift   throw left  resize

# Focus Bindings
bind l:ctrl    focus right
bind j:ctrl     focus left
bind i:ctrl       focus up
bind k:ctrl     focus down
bind i:ctrl;shift   focus behind
bind k:ctrl;shift focus behind

# Window Hints
bind esc:cmd hint
